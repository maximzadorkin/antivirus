<UserControl x:Class="client.FilesProcessing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:client"
             mc:Ignorable="d" d:DesignWidth="800" Height="473.2">
    <Grid Margin="0">
        <StackPanel Background="{x:Null}">
            <Label x:Name="Label" Content="..." Height="58" Foreground="White"/>
            <Border BorderBrush="#FFEEEEEE" BorderThickness="0.5,0.5,0.5,0">
                <ScrollViewer CanContentScroll="True" BorderThickness="0.5,0.5,0.5,0" Height="373" Margin="0.2,0">
                    <StackPanel x:Name="StackPanel" Height="380" />
                </ScrollViewer>
            </Border>
            <Button 
                x:Name="ButtonRepair" 
                Content="Запуск действий" 
                Background="#FF00B1FF" 
                Foreground="#FFFFFF"
                FontFamily="Verdana" 
                FontSize="14"
                Height="40" 
                Padding="0" 
                BorderBrush="{x:Null}"
                Cursor="Hand"
                Click="ButtonRepair_Click" 
            />
        </StackPanel>
    </Grid>
</UserControl>
