<UserControl x:Class="client.Plans"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:client"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel Height="30" VerticalAlignment="Top" Orientation="Horizontal" Margin="10,0">
            <Label Content="Дата и время:" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
            <xctk:DateTimePicker Width="200"/>
            <Button x:Name="ButtonAddDate" Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="142" Height="30" Background="White"/>
        </StackPanel>
        <Label Content="Запланированные проверки:" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
