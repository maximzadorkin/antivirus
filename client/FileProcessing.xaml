<UserControl x:Class="client.FileProcessing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:client"
             mc:Ignorable="d" d:DesignWidth="800" Height="50">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <RadioButton Content="Разрешить" Foreground="#FF4DD0A9" FontFamily="Dubai" IsChecked="True" Grid.Column="0" VerticalAlignment="Center"/>
        <RadioButton Content="В карантин" Foreground="#FFEBA51D" FontFamily="Dubai" Grid.Column="1" VerticalAlignment="Center" />
        <RadioButton Content="Удалить" Foreground="#FFFF4343" FontFamily="Dubai" Grid.Column="2" VerticalAlignment="Center" />
        <Label x:Name="label" Content="Label" FontFamily="Dubai" Grid.Column="3" VerticalAlignment="Center" />
    </Grid>
</UserControl>
